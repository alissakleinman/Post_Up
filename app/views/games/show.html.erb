<h2 class="text-center"><%= @game.home_team %> v. <%= @game.away_team %></h2>

<h5 class="text-center"> Post up! There's a lot to talk about. </h5>

<ul id="chat">
  <%= render @messages %>
</ul>

<%= form_for [@game, Message.new], url: game_messages_path(@game), remote: true do |f| %>
  <%= f.text_field :content %>
  <%= f.submit "Send" %>
<% end %>

<%= subscribe_to "/messages/#{@game.id}" %>

