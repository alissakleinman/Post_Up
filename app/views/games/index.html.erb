<h1>Upcoming NBA lineup</h1>
<div class="container">
  <h3>What's on tap for the NBA today:</h3>

  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Home Team</th>
        <th>Away Team</th>
        <th>Game Time (date/time)</th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
      <tr>
        <td><%= link_to 'Discuss', game_path(game), class: 'btn btn-success' %></td>
        <td><%= game.home_team %></td>
        <td><%= game.away_team %></td>
        <td><%= game.game_time %></td>
      </tr>
      <%end%>
    </tbody>
  </table>
</div>

